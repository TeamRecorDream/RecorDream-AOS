<resources>
    <!-- Base application theme. -->
    <style name="Theme.RecorDream" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
        <!-- <item name="fontFamily">@font/pretendard</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog.Style</item>
    </style>
    <!--bottomsheet-->
    <style name="BottomSheetDialog.Style" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal.Style</item>
    </style>

    <style name="Modal.Style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rectangle_radius_16dp_dialog</item>
    </style>

    <!--mypage numberpicker에 사용-->
    <style name="NumberpickerStyle">
        <item name="fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">26dp</item>
        <item name="android:editTextColor">@color/white01_FFFFFF</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <!--header background-->
        <item name="colorAccent">@color/dark01_02040F</item>

        <!--selected day-->
        <item name="android:colorControlActivated">@color/grey02_373737</item>

        <!--cancel&ok-->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>