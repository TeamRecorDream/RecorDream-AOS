<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.example.recordream.presentation.home.HomeViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.MainActivity">


        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_above="@id/bnv_main_customnav"
            android:background="@drawable/bottom_shadow"
            app:layout_constraintBottom_toTopOf="@id/bnv_main_customnav" />

        <com.example.recordream.util.CustomBottomNavigationView
            android:id="@+id/bnv_main_customnav"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:padding="3dp"
            android:theme="@style/B12"
            app:itemIconTint="@color/white01_FFFFFF"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/menu_main_bnv" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>