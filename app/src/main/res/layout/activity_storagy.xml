<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.storagy.StoragyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_store_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_store_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rd_home_rogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/tv_sotre_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:src="@drawable/icn_search"
            app:layout_constraintEnd_toStartOf="@id/iv_store_mypage"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_store_mypage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icn_logo_mypage"
            app:layout_constraintEnd_toEndOf="@id/cl_store_logo"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_store_myemotion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/cl_store_logo">

        <TextView
            android:id="@+id/tv_store_myemotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/store_myemotion"
            android:theme="@style/Sb14"
            app:layout_constraintStart_toStartOf="@id/cl_store_myemotion"
            app:layout_constraintTop_toTopOf="@id/cl_store_myemotion" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="@id/cl_store_myemotion"
            app:layout_constraintStart_toStartOf="@id/cl_store_myemotion"
            app:layout_constraintTop_toBottomOf="@id/tv_store_myemotion"
            tools:itemCount="7"
            tools:listitem="@layout/item_list_store_myemotion" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_store_emotion_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:theme="@style/Sb12"
        app:layout_constraintStart_toStartOf="@id/cl_store_myemotion"
        app:layout_constraintTop_toBottomOf="@id/cl_store_myemotion"
        tools:text="8개의 기록" />

    <ImageView
        android:id="@+id/iv_store_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:src="@drawable/home_list_menu_selector"
        app:layout_constraintBottom_toBottomOf="@id/tv_store_emotion_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_store_emotion_count" />

    <ImageView
        android:id="@+id/iv_gallery_menu_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:src="@drawable/gallery_list_line"
        app:layout_constraintBottom_toBottomOf="@id/iv_store_list"
        app:layout_constraintEnd_toStartOf="@id/iv_store_list"
        app:layout_constraintTop_toTopOf="@id/iv_store_list" />

    <ImageView
        android:id="@+id/iv_store_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:src="@drawable/home_grid_menu_selector"
        app:layout_constraintBottom_toBottomOf="@id/iv_store_list"
        app:layout_constraintEnd_toStartOf="@+id/iv_gallery_menu_line"
        app:layout_constraintTop_toTopOf="@id/iv_store_list" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fg_store_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_store_emotion_count" />

</androidx.constraintlayout.widget.ConstraintLayout>